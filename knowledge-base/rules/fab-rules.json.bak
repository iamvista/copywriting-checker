{
  "name": "FAB 銷售法則",
  "description": "Vista Cheng 最核心的文案撰寫公式：Feature（特性）+ Advantage（優勢）+ Benefit（效益）",
  "version": "1.0",
  "rules": {
    "feature": {
      "name": "F - Feature（特性）",
      "description": "陳述產品的特色、規格、功能",
      "keywords": [
        "搭載", "配備", "採用", "具備", "擁有", "內建",
        "尺寸", "規格", "材質", "容量", "重量",
        "功能", "特色", "設計", "配置"
      ],
      "patterns": [
        "搭載\\s*\\S+",
        "採用\\s*\\S+",
        "配備\\s*\\S+",
        "具備\\s*\\S+功能",
        "\\d+(?:吋|公分|公克|GB|TB|mAh)"
      ],
      "weight": 0.25,
      "scoring": {
        "present": 25,
        "absent": 0,
        "message": {
          "success": "有明確說明產品特性",
          "warning": "缺少產品特性描述"
        }
      }
    },
    "advantage": {
      "name": "A - Advantage（優勢）",
      "description": "說明相較於競爭對手的優勢，展現獨特賣點",
      "keywords": [
        "獨家", "唯一", "首創", "業界第一", "領先",
        "更", "比", "超越", "優於", "勝過",
        "獨特", "專利", "創新", "突破"
      ],
      "patterns": [
        "(?:獨家|唯一|首創|業界第一)",
        "比\\s*\\S+\\s*(?:更|好|快|強)",
        "領先\\s*\\S+",
        "(?:更|超)\\s*\\S+(?:%|倍|快|輕|省)"
      ],
      "weight": 0.35,
      "scoring": {
        "present": 35,
        "absent": 0,
        "message": {
          "success": "有說明產品優勢或差異化",
          "warning": "缺少產品優勢說明，建議補充與競品的差異"
        }
      }
    },
    "benefit": {
      "name": "B - Benefit（效益）",
      "description": "強調對目標受眾的具體利益與價值，說明「這對我有什麼好處」",
      "keywords": [
        "讓你", "幫你", "為你", "使你", "助你",
        "節省", "省下", "提升", "增加", "減少",
        "輕鬆", "簡單", "方便", "快速", "安心",
        "解決", "避免", "不再", "不用", "無需"
      ],
      "patterns": [
        "(?:讓|幫|為|使|助)你\\s*\\S+",
        "(?:節省|省下|提升|增加)\\s*\\d+(?:%|倍|小時|分鐘)",
        "(?:輕鬆|簡單|方便|快速)\\s*\\S+",
        "(?:解決|避免)\\s*\\S+(?:問題|困擾|麻煩)"
      ],
      "weight": 0.40,
      "scoring": {
        "present": 40,
        "absent": 0,
        "message": {
          "success": "有清楚說明對顧客的具體利益",
          "critical": "⚠️ 只停留在特性層面，沒有說明對顧客的好處！這是最常見的文案錯誤。"
        }
      }
    }
  },
  "overall_scoring": {
    "excellent": {
      "range": [85, 100],
      "label": "優秀",
      "description": "完整運用 FAB 法則，特性、優勢、效益三者兼具"
    },
    "good": {
      "range": [60, 84],
      "label": "良好",
      "description": "有提到效益，但可以更具體說明優勢"
    },
    "fair": {
      "range": [40, 59],
      "label": "待改進",
      "description": "只有特性和部分優勢，缺少對顧客的效益說明"
    },
    "poor": {
      "range": [0, 39],
      "label": "需重寫",
      "description": "只停留在特性（F）層面，沒有說明優勢和效益"
    }
  },
  "tips": [
    "不要只停留在 F（特性）層面，一定要說到 B（效益）",
    "Features tell, but benefits sell（功能告知，利益才賣）",
    "同一產品對不同客群可強調不同的 Benefit",
    "先想到讀者，把讀者擺在第一位",
    "不是寫自己想說的話，而是讀者想知道的事"
  ],
  "examples": {
    "good": {
      "text": "iPhone 搭載 A17 Pro 晶片（F），比前一代快 20%（A），讓你工作更有效率，重要時刻不漏接（B）",
      "analysis": {
        "feature": "搭載 A17 Pro 晶片",
        "advantage": "比前一代快 20%",
        "benefit": "讓你工作更有效率，重要時刻不漏接"
      }
    },
    "poor": {
      "text": "本產品採用最新技術，擁有多項功能",
      "analysis": {
        "feature": "採用最新技術",
        "advantage": "無",
        "benefit": "無",
        "issue": "只說特性，沒有說明優勢和對顧客的好處"
      }
    }
  }
}
