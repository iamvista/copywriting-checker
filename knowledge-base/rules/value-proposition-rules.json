{
  "name": "價值主張規則",
  "description": "評估文案是否清楚傳達產品/服務的價值，對應 FAB 法則的 Benefit 層面",
  "version": "1.0",
  "core_elements": {
    "clear_benefits": {
      "name": "清楚說明能得到什麼",
      "description": "明確告訴讀者使用產品/服務後能獲得什麼好處",
      "weight": 30,
      "keywords": [
        "讓你", "幫你", "為你", "使你", "助你",
        "獲得", "得到", "擁有", "享有",
        "提升", "增加", "改善", "達成",
        "節省", "省下", "減少", "避免",
        "解決", "克服", "擺脫"
      ],
      "patterns": [
        "(?:讓|幫|為|使|助)你\\s*\\S+",
        "(?:獲得|得到|擁有)\\s*\\S+",
        "(?:提升|增加|改善)\\s*\\S+",
        "(?:節省|省下)\\s*\\S+",
        "(?:解決|避免)\\s*\\S+(?:問題|困擾)"
      ],
      "scoring": {
        "explicit": {
          "score": 30,
          "message": "✓ 清楚說明能得到什麼好處。"
        },
        "implicit": {
          "score": 15,
          "message": "⚠️ 有提到好處，但不夠具體"
        },
        "absent": {
          "score": 0,
          "message": "✗ 缺少具體好處說明。"
        }
      },
      "examples": {
        "good": [
          "讓你在 30 天內掌握文案技巧",
          "幫你節省 50% 的時間成本",
          "使你的轉換率提升 3 倍"
        ],
        "poor": [
          "我們的產品很棒",
          "高品質服務",
          "值得信賴"
        ]
      }
    },
    "concrete_evidence": {
      "name": "具體數字或證據",
      "description": "用數據、案例或證據支持價值主張",
      "weight": 25,
      "types": {
        "numbers": {
          "name": "具體數字",
          "patterns": [
            "\\d+(?:%|倍|萬|億)",
            "提升\\s*\\d+",
            "節省\\s*\\d+",
            "增加\\s*\\d+"
          ],
          "examples": [
            "轉換率提升 40%",
            "節省 3 小時",
            "超過 10,000 位學員"
          ]
        },
        "timeframe": {
          "name": "時間框架",
          "patterns": [
            "\\d+\\s*(?:天|週|月|年)(?:內|後)",
            "只需\\s*\\d+\\s*(?:分鐘|小時)"
          ],
          "examples": [
            "3 週內掌握技巧",
            "30 天見效",
            "只需 5 分鐘"
          ]
        },
        "social_proof": {
          "name": "社會證明",
          "keywords": [
            "位學員", "位用戶", "家企業",
            "見證", "推薦", "好評",
            "五星評價", "滿意度"
          ],
          "examples": [
            "200 位學員見證",
            "獲得 500+ 五星好評",
            "滿意度 98%"
          ]
        }
      },
      "scoring": {
        "multiple_evidence": {
          "score": 25,
          "message": "✓ 有多種具體證據支持。"
        },
        "single_evidence": {
          "score": 15,
          "message": "⚠️ 有證據，但可以更豐富"
        },
        "no_evidence": {
          "score": 0,
          "message": "✗ 缺少具體數字或證據。"
        }
      }
    },
    "differentiation": {
      "name": "差異化表達",
      "description": "說明為什麼要選擇你而非競爭對手",
      "weight": 25,
      "keywords": [
        "獨家", "唯一", "首創", "專屬",
        "業界第一", "領先", "創新",
        "與眾不同", "獨特", "專利",
        "別人沒有", "市場唯一"
      ],
      "patterns": [
        "(?:獨家|唯一|首創|專屬|業界第一)",
        "(?:領先|超越)\\s*\\S+",
        "(?:創新|突破)\\s*\\S+"
      ],
      "scoring": {
        "strong_differentiation": {
          "score": 25,
          "message": "✓ 有明確的差異化優勢。"
        },
        "weak_differentiation": {
          "score": 12,
          "message": "⚠️ 有提到優勢，但差異化不夠明顯"
        },
        "no_differentiation": {
          "score": 0,
          "message": "✗ 未說明為何要選擇你。"
        }
      },
      "examples": {
        "good": [
          "業界唯一提供終身免費更新",
          "獨家專利技術，市場領先",
          "首創 AI 自動分析功能"
        ],
        "poor": [
          "我們很專業",
          "品質優良",
          "服務周到"
        ]
      }
    },
    "credibility": {
      "name": "可信度支持",
      "description": "透過客戶見證、數據、案例、認證等建立信任",
      "weight": 20,
      "types": {
        "testimonials": {
          "name": "客戶見證",
          "keywords": [
            "學員見證", "客戶推薦", "用戶評價",
            "真實案例", "成功故事"
          ]
        },
        "certifications": {
          "name": "認證背書",
          "keywords": [
            "認證", "得獎", "獲獎", "肯定",
            "專業認證", "國際認證", "政府認可"
          ]
        },
        "media_coverage": {
          "name": "媒體報導",
          "keywords": [
            "媒體報導", "新聞報導", "專訪",
            "登上", "刊登", "報導"
          ]
        },
        "expert_endorsement": {
          "name": "專家推薦",
          "keywords": [
            "專家推薦", "教授推薦", "名人推薦",
            "業界權威", "領域專家"
          ]
        }
      },
      "scoring": {
        "multiple_proofs": {
          "score": 20,
          "message": "✓ 有多種可信度支持。"
        },
        "single_proof": {
          "score": 10,
          "message": "⚠️ 有可信度支持，但可以更多元"
        },
        "no_proof": {
          "score": 0,
          "message": "建議加入客戶見證、數據或案例"
        }
      }
    }
  },
  "value_proposition_formula": {
    "name": "價值主張公式",
    "structure": "[目標受眾] + [痛點] + [解決方案] + [具體成果] + [差異化]",
    "example": "「為忙碌的行銷人員（目標受眾），解決文案寫不出來的困擾（痛點），用 FAB 法則 30 分鐘寫出高轉換文案（解決方案），已幫助 200 位學員提升轉換率 40%（具體成果），業界唯一提供一對一文案健診（差異化）」"
  },
  "scoring_algorithm": {
    "description": "根據四大核心元素的得分加總",
    "max_score": 100,
    "calculation": "清楚說明好處(30分) + 具體證據(25分) + 差異化(25分) + 可信度(20分)"
  },
  "grade_ranges": {
    "excellent": {
      "range": [80, 100],
      "label": "優秀",
      "description": "價值主張清晰有力，具有說服力"
    },
    "good": {
      "range": [60, 79],
      "label": "良好",
      "description": "價值主張明確，可再強化差異化"
    },
    "fair": {
      "range": [40, 59],
      "label": "待改進",
      "description": "價值主張不夠清晰或缺乏證據"
    },
    "poor": {
      "range": [0, 39],
      "label": "需重寫",
      "description": "價值主張模糊，無法打動讀者"
    }
  },
  "common_mistakes": [
    "只說「高品質」、「專業服務」等空泛詞彙",
    "沒有具體數字或證據支持",
    "未說明與競爭對手的差異",
    "缺少客戶見證或成功案例。",
    "只談產品特性，沒有說明對顧客的好處"
  ],
  "improvement_tips": [
    "用「讓你...」、「幫你...」句型說明好處",
    "加入具體數字：「提升 40%」比「大幅提升」更有力",
    "展示社會證明：「200 位學員見證」",
    "說明獨特性：「業界唯一...」、「獨家...」",
    "提供真實案例或客戶見證"
  ],
  "examples": {
    "excellent": {
      "text": "「Vista 寫作陪伴計畫」已幫助 200 位學員在 3 個月內掌握文案技巧，平均轉換率提升 40%。業界唯一提供一對一文案健診，讓你不只學會寫，更學會改。",
      "score_breakdown": {
        "clear_benefits": 30,
        "concrete_evidence": 25,
        "differentiation": 25,
        "credibility": 20,
        "total": 100
      }
    },
    "poor": {
      "text": "我們提供優質的文案寫作課程，師資專業，內容豐富，歡迎報名。",
      "score_breakdown": {
        "clear_benefits": 0,
        "concrete_evidence": 0,
        "differentiation": 0,
        "credibility": 0,
        "total": 0
      },
      "issues": [
        "沒有說明學員能得到什麼具體好處",
        "缺少數字或證據。",
        "沒有差異化",
        "沒有可信度支持"
      ]
    }
  }
}
