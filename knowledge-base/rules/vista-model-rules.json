{
  "meta": {
    "version": "1.0.0",
    "description": "Vista 文案轉換優化模型 - 8大策略模組診斷框架",
    "author": "Vista Cheng",
    "last_updated": "2026-01-07"
  },
  "scoring_system": {
    "scale": "0-2分三級制",
    "levels": {
      "0": {
        "label": "無效/缺失",
        "description": "訊息模糊、缺失或產生認知阻礙",
        "severity": "critical",
        "action": "必須立即修正"
      },
      "1": {
        "label": "低效/存在",
        "description": "僅具備形式，缺乏具體數據或說服力弱"
      },
      "2": {
        "label": "高效/優化",
        "description": "具體、可量化、位置正確，能有效驅動下一階段行為"
      }
    }
  },
  "modules": {
    "module_a": {
      "name": "受眾精準度與定位",
      "code": "A",
      "strategy_intent": "在閱讀的前3秒內建立關聯性，過濾非目標用戶，鎖定高潛力受眾",
      "weight": 0.15,
      "kpis": {
        "a1": {
          "name": "首屏相關性",
          "description": "開頭前2行即明確指出與「讀者」的利益關聯，而非自我介紹",
          "max_score": 2,
          "criteria": {
            "2": "前2行清晰呼應讀者痛點或目標",
            "1": "有提及讀者但關聯性不強",
            "0": "以產品或自我介紹開場"
          },
          "keywords": ["您", "你是否", "想要", "需要", "困擾", "希望", "正在", "如何"],
          "negative_keywords": ["我們", "本公司", "關於我們"]
        },
        "a2": {
          "name": "身份標籤化",
          "description": "明確呼叫目標受眾的身份標籤或特定情境",
          "max_score": 2,
          "criteria": {
            "2": "具體標註受眾身份或情境",
            "1": "模糊提及受眾類型",
            "0": "完全沒有受眾定位"
          },
          "keywords": ["創業者", "主管", "行銷人", "老闆", "經理", "家長", "學生", "上班族", "接案者", "創作者", "新手", "初學者"]
        },
        "a3": {
          "name": "限制條件共鳴",
          "description": "準確描述受眾的資源限制（預算、時間、技能缺口），建立同理連結",
          "max_score": 2,
          "criteria": {
            "2": "明確描述2項以上資源限制",
            "1": "提及1項資源限制",
            "0": "未描述限制條件"
          },
          "keywords": ["預算有限", "沒有時間", "不懂", "不會", "缺乏", "有限的", "沒有經驗"]
        },
        "a4": {
          "name": "負向篩選",
          "description": "運用「排除句」勸退非目標受眾，提升核心受眾的專屬感與信賴度",
          "max_score": 2,
          "criteria": {
            "2": "明確使用排除句",
            "1": "暗示特定受眾",
            "0": "無篩選機制"
          },
          "keywords": ["不適合", "如果您", "除非", "不是", "不需要"]
        },
        "a5": {
          "name": "現狀診斷",
          "description": "一句話精準定義讀者的卡關狀態（認知/行動/結果層面的障礙）",
          "max_score": 2,
          "criteria": {
            "2": "精準診斷卡關狀態",
            "1": "模糊描述問題",
            "0": "未診斷現狀"
          },
          "keywords": ["卡關", "遇到", "面臨", "困難", "瓶頸", "不知道", "不確定"]
        }
      }
    },
    "module_b": {
      "name": "痛點洞察",
      "code": "B",
      "strategy_intent": "透過具體化問題場景，激發解決問題的急迫性 (Urgency)，而非僅停留在描述層面",
      "weight": 0.15,
      "kpis": {
        "b1": {
          "name": "場景具象化",
          "description": "痛點描述基於真實業務場景，而非通用形容詞",
          "max_score": 2,
          "criteria": {
            "2": "描述具體場景與情境",
            "1": "使用部分具體描述",
            "0": "僅用抽象形容詞"
          },
          "keywords": ["當你", "每次", "總是", "經常", "例如", "比如說"],
          "negative_keywords": ["很好", "很棒", "非常", "超級"]
        },
        "b2": {
          "name": "隱性成本顯性化",
          "description": "放大不解決問題的代價（機會成本、沈沒成本、風險溢價）",
          "max_score": 2,
          "criteria": {
            "2": "量化或具體說明隱性成本",
            "1": "提及但未具體化",
            "0": "未提及成本"
          },
          "keywords": ["浪費", "損失", "錯過", "代價", "成本", "機會", "風險"],
          "patterns": ["\\d+[元|小時|天|週|月|年]", "至少.+以上"]
        },
        "b3": {
          "name": "心理獨白",
          "description": "準確捕捉用戶內心的焦慮與自我懷疑，建立深層情感共鳴",
          "max_score": 2,
          "criteria": {
            "2": "捕捉內心對話或情緒",
            "1": "提及情緒但不深入",
            "0": "無情緒連結"
          },
          "keywords": ["擔心", "害怕", "焦慮", "不安", "懷疑", "猶豫", "是否", "會不會", "真的嗎"]
        },
        "b4": {
          "name": "根因分析",
          "description": "指出問題的系統性成因（非個人努力不足），提供新的解釋框架",
          "max_score": 2,
          "criteria": {
            "2": "提供系統性原因分析",
            "1": "簡單說明原因",
            "0": "未分析根因"
          },
          "keywords": ["其實", "真正的原因", "問題在於", "根本原因", "系統", "機制", "結構"]
        },
        "b5": {
          "name": "去 buzzword 化",
          "description": "避免空泛的商業套話，改用可觀察的現象描述",
          "max_score": 2,
          "criteria": {
            "2": "完全使用具體描述",
            "1": "少量buzzword",
            "0": "充滿空泛套話"
          },
          "negative_keywords": ["賦能", "打造", "提升", "優化", "整合", "創新", "突破", "革命性"],
          "check_type": "negative"
        }
      }
    },
    "module_c": {
      "name": "價值主張與差異化",
      "code": "C",
      "strategy_intent": "定義 USP (Unique Selling Proposition)，明確告知「為何選擇你」及預期 ROI",
      "weight": 0.15,
      "kpis": {
        "c1": {
          "name": "成果可視化",
          "description": "清晰描繪使用後的「Better State」，且該狀態可被驗證",
          "max_score": 2,
          "criteria": {
            "2": "具體描述可驗證的成果",
            "1": "模糊描述成果",
            "0": "未說明成果"
          },
          "keywords": ["讓您", "幫您", "能夠", "可以", "達成", "實現", "獲得"],
          "patterns": ["從.+到", "提升.+%", "增加.+倍", "節省.+[時間|成本]"]
        },
        "c2": {
          "name": "效益屬性定位",
          "description": "明確界定價值維度（降本、增效、避險、提升確定性）",
          "max_score": 2,
          "criteria": {
            "2": "明確標註價值類型",
            "1": "隱含價值類型",
            "0": "價值不明確"
          },
          "keywords": ["省錢", "省時", "降低風險", "提高效率", "增加收入", "減少成本", "確保"]
        },
        "c3": {
          "name": "交付物明確性",
          "description": "清楚列出具體產出（Deliverables），如模板、SOP、診斷書",
          "max_score": 2,
          "criteria": {
            "2": "列出具體交付物",
            "1": "提及但不具體",
            "0": "未說明交付物"
          },
          "keywords": ["模板", "清單", "檢查表", "SOP", "流程", "報告", "診斷", "框架", "工具"]
        },
        "c4": {
          "name": "競品對標",
          "description": "與替代方案（DIY/AI/外包/競品）進行比較，突出相對優勢",
          "max_score": 2,
          "criteria": {
            "2": "明確與替代方案比較",
            "1": "暗示差異性",
            "0": "無比較"
          },
          "keywords": ["相比", "不同於", "比起", "傳統", "一般", "市面上", "其他"]
        },
        "c5": {
          "name": "方法論驗證",
          "description": "差異化來自獨特的方法論或機制，而非僅僅是「用心」",
          "max_score": 2,
          "criteria": {
            "2": "說明獨特方法論",
            "1": "提及方法但不清晰",
            "0": "無方法論說明"
          },
          "keywords": ["模型", "系統", "框架", "方法", "步驟", "流程", "公式", "法則"]
        }
      }
    },
    "module_d": {
      "name": "信任資產建構",
      "code": "D",
      "strategy_intent": "構建證據鏈 (Chain of Evidence)，系統性消除決策過程中的懷疑與風險感知",
      "weight": 0.12,
      "kpis": {
        "d1": {
          "name": "證據多樣性",
          "description": "至少部署 2 種以上證據類型（數據/案例/權威背書/社會認同）",
          "max_score": 2,
          "criteria": {
            "2": "2種以上證據類型",
            "1": "1種證據類型",
            "0": "無證據"
          },
          "evidence_types": ["數據", "案例", "權威", "認證", "獎項", "媒體"]
        },
        "d2": {
          "name": "數據顆粒度",
          "description": "證據具備「Before/After」對比或具體提升幅度",
          "max_score": 2,
          "criteria": {
            "2": "Before/After 對比數據",
            "1": "單一數據點",
            "0": "無數據"
          },
          "patterns": ["從.+提升到", "增加.+%", ".+倍", "\\d+位", "\\d+年", "\\d+個"]
        },
        "d3": {
          "name": "案例真實性",
          "description": "包含「挑戰→處置→結果」的完整敘事結構，而非單純讚美",
          "max_score": 2,
          "criteria": {
            "2": "完整案例敘事",
            "1": "部分案例元素",
            "0": "無案例"
          },
          "keywords": ["原本", "後來", "經過", "最終", "解決", "達成"]
        },
        "d4": {
          "name": "邊界管理",
          "description": "誠實揭露適用邊界與前提條件，以退為進增強可信度",
          "max_score": 2,
          "criteria": {
            "2": "明確說明適用條件",
            "1": "暗示限制",
            "0": "無邊界說明"
          },
          "keywords": ["適合", "前提是", "條件", "如果", "需要", "建議"]
        },
        "d5": {
          "name": "異議處理",
          "description": "主動識別並回答潛在的最大疑慮（FAQ 前置化）",
          "max_score": 2,
          "criteria": {
            "2": "主動回答疑慮",
            "1": "部分說明",
            "0": "未處理疑慮"
          },
          "keywords": ["可能會問", "常見問題", "很多人擔心", "但是", "不過", "雖然"]
        }
      }
    },
